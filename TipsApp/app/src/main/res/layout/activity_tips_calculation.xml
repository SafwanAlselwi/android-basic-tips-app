<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TipsCalculationActivity" android:orientation="vertical" android:padding="20dp">

    <TextView
            android:text="Resturant Tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center" android:padding="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editCost" android:hint="How much is the cost?" android:textSize="20sp"
            android:paddingStart="20dp" android:textColor="#A80202" android:textColorHint="#980202"/>
    <TextView
            android:text="How was the service?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="24sp"
            android:paddingStart="20dp" android:layout_marginTop="20dp"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rgOptions" android:padding="10dp">
        <RadioButton
                android:text="Amazing (20%)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtnAmazing"
                android:textSize="20sp" android:textColor="#014708"/>
        <RadioButton
                android:text="Good (10%)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtnGood" android:textSize="20sp"
                android:textColor="#014708"/>
        <RadioButton
                android:text="Okay (5%)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtnOkay" android:textSize="20sp"
                android:textColor="#014708"/>
        <RadioButton
                android:text="Bad (0%)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtnBad" android:textSize="20sp"
                android:textColor="#014708"/>
    </RadioGroup>
    <Switch
            android:text="Round this tip?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchRound"
            android:textSize="20sp" android:checked="true" tools:checked="false" android:minHeight="48dp"/>
    <Button
            android:text="Calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnCalculate" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtResult" android:textSize="20sp"
            android:textAlignment="viewEnd" android:textColor="#0A28BA"/>
</LinearLayout>